{
    "manifest_version": 3,
    "name": "Web Scraper",
    "version": "1.0",
    "description": "Scrapes data from websites and exports to Excel or CSV.",
    "permissions": [
      "activeTab",
      "scripting",
      "downloads"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
  